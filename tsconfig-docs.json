{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": false,
        "module": "amd",
        "outDir": "dist/client",
        "rootDir": "sources/lib"
    },
    "include": [
        "sources/lib/**/*.ts"
    ],
    "typedocOptions": {
        "excludeExternals": true,
        "excludeNotExported": true,
        "excludePrivate": true,
        "excludeProtected": true,
        "gitRevision": "master",
        "includeDeclarations": true,
        "mode": "file",
        "name": "ORDBOK Index Plugin API",
        "plugin": "none",
        "theme": "node_modules/@ordbok/typedoc-theme/bin/ordbok"
    }
}
